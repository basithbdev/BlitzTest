
@{
    ViewData["Title"] = "Blitz - Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <title>Sign Up</title>
</head>

<body>
    <nav class="navbar navbar-light bg-light shadow p-3 mb-5 bg-body rounded">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Blitz</a>

            <a class="nav-link text-dark" asp-area="" asp-controller="LogIn" asp-action="LogIn">
                <button class="btn btn-primary me-2" type="submit" id="btnLogin">
                    <i class="bi bi-person me-2"></i>Login
                </button>
            </a>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card card-login" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4">Sign Up</h3>
                        <form>
                            <div class="mb-3">
                                <label for="userInputFirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="userInputFirstName" required>
                            </div>
                            <div class="mb-3">
                                <label for="userInputLastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="userInputLastName" required>
                            </div>
                            <div class="mb-3">
                                <label for="userInputEmail" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="userInputEmail"
                                       aria-describedby="emailHelp" required>
                                <div id="emailHelp" class="form-text">
                                    We'll never share your email with anyone else.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="userInputPhoneNumber" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="userInputPhoneNumber" required>
                            </div>
                            <div class="mb-3">
                                <label for="userInputDateOfBirth" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="userInputDateOfBirth" required>
                            </div>
                            <div class="mb-3">
                                <label class="mb-2">Gender</label>
                                <br />

                                <label class="form-check-label" for="userInputGender">
                                    Male
                                </label>
                                <input class="form-check-input me-2" type="radio" name="flexRadioDefault"
                                       id="userInputGender">

                                <label class="form-check-label " for="userInputGender">
                                    Female
                                </label>
                                <input class="form-check-input me-2" type="radio" name="flexRadioDefault"
                                       id="userInputGender">

                                <label class="form-check-label " for="userInputGender">
                                    Other
                                </label>
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                       id="userInputGender">
                            </div>

                            <div class="mb-3">
                                <label for="userInputPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="userInputSetPassword" required>
                            </div>

                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-success">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>

</html>
